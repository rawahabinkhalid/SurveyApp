<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:backgroundTintMode="src_over"
    tools:context=".Retailor.Forgot_Password_Retailer.Forgot_Pass_Retailer">

    <include
        layout="@layout/action_bar_main_without_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rl_main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp">

            <LinearLayout
                android:id="@+id/ln_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_set">

                <TextView
                    android:id="@+id/forgot_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:text="@string/Forgot_Password"
                    android:textColor="#187bcd"
                    android:textSize="@dimen/heading_size_retailer" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_ln_retailor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_login"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans"
                    android:maxLines="2"
                    android:text="@string/txt_forgot"
                    android:textColor="@color/text_color_selection"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_ln_retailor"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:weightSum="1">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_email"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/email_address_retailer"
                    android:textColorHint="#A9A9A9"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    app:boxStrokeColor="@color/box_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                         android:theme="@style/TextLabelEditeText"  />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_txt"
                android:layout_marginTop="20dp"
                android:orientation="vertical"

                android:weightSum="2">

                <Button
                    android:id="@+id/btn_reset_ret"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/reset"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/button_text_size"
                    app:elevation="0dp" />

                <Button
                    android:id="@+id/btn_lgn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/button_text_size"

                    />

            </LinearLayout>

            <TextView
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text="@string/all_rights_reserved"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>