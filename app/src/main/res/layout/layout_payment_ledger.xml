<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/edit_text_squared"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_alignParentStart="true"
            android:text="Ghulam Rabani &amp; Sons Traders &amp; Distributors"
            android:textColor="@color/rv_box_color"
            android:textSize="@dimen/rv_box_heading_size" />

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textColor="#676a6c"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ledger_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="@string/payment_ledger_id"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/ledger_id_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ledger_id"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/ledger_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ledger_id_colon"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="1002312324251524"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/document_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledger_id"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="@string/document_type"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/document_type_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledger_id"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/document_type"
        android:paddingBottom="5dp"
        android:text=": "
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/document_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledger_id"
        android:layout_toEndOf="@+id/document_type_colon"
        android:paddingBottom="5dp"
        android:text="Invoice"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        android:visibility="gone"  />
    <TextView
        android:id="@+id/date_ledger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_type"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="@string/date_item"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/date_ledger_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_type"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/date_ledger"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/date_ledger_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_type"
        android:layout_toEndOf="@+id/date_ledger_colon"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="17/05/2020"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_ledger"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="@string/debit_amount"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/transaction_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_ledger"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/transaction"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/transaction_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_ledger"
        android:layout_toEndOf="@+id/transaction_colon"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="Rs. 50,000.00"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />



    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="@string/balance_item"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/balance_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/balance"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/balance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction"
        android:layout_toEndOf="@+id/balance_colon"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="Rs. 600,000.00"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

</RelativeLayout>