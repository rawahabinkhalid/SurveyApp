                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_ln">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:paddingTop="15dp"
                        android:text="Register"
                        android:textColor="#187bcd"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_txt_username"
                        
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Name *"
                        android:textColorHint="#A9A9A9"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textCapSentences"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_txt_email"
                        
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Email *"
                        android:textColorHint="#A9A9A9"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_txt_password"

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Password *"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp"
                        app:errorEnabled="true"
                        android:textColorHint="#A9A9A9"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#A9A9A9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="20dp"
                            android:inputType="textPassword"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_txt_confirmpass"
                        
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Confirm Password *"
                        android:textColorHint="#A9A9A9"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#A9A9A9">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_confirmpass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_txt_mobile_number"
                        
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:hint="Mobile No *"
                        android:textColorHint="#A9A9A9"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:maxLength="12"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

