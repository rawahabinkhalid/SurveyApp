<!--                        app:passwordToggleEnabled="true">-->

<!--                        <com.google.android.material.textfield.TextInputEditText-->
<!--                            android:id="@+id/txt_business_name"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:inputType="textCapSentences"-->
<!--                            android:theme="@style/TextLabelEditeText" />-->

<!--                    </com.google.android.material.textfield.TextInputLayout>-->

                    <RelativeLayout
                        android:id="@+id/relative_organizations"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/organizations"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:dropDownWidth="match_parent"
                            android:popupBackground="@drawable/spinner_round" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignTop="@id/organizations"
                            android:layout_alignEnd="@+id/organizations"
                            android:layout_alignRight="@+id/organizations"
                            android:layout_alignBottom="@+id/organizations"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            android:theme="@style/Spinner" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_txt"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_register_close"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:text="Close"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp"

                        />

                    <Button
                        android:id="@+id/btn_register_signup"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:text="@string/signup"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_btn"
                    android:gravity="center"
                    android:text="@string/all_rights_reserved" />

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
