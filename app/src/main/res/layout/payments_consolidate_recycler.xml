<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/edit_text_squared"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="5dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/consolidate_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Ghulam Rabani &amp; Sons Traders &amp; Distributors"
            android:textStyle="bold"
            android:textColor="#676a6c"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/consolidate_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textColor="#676a6c"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/consolidate_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="20dp"
        android:text="Invoice No:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/consolidate_invoice_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/consolidate_invoice"
        android:text="1002312324251524"
        android:textColor="#676a6c"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_invoice_no"
        android:text="Company: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/consolidate_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_invoice_no"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/company"
        android:text="Shield"
        android:textStyle="bold"
        android:textColor="#676a6c"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_createdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company"
        android:text="Created Date: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_consolidated_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_company_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_createdate"
        android:text="24/12/2019"
        android:textColor="#676a6c"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_consolidate_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_createdate"
        android:text="Amount:"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/tv_Rs._amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_consolidated_date"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_consolidate_amount"
        android:text="Rs. "
        android:textColor="#676a6c"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/consolidate_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_consolidated_date"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/tv_Rs._amount"
        android:text=" 600,000.00"
        android:textColor="#676a6c"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_consolidate_remamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_consolidate_amount"
        android:text="Remaining Amount:"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_Rs.1_ramaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_amount_value"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_consolidate_remamount"
        android:text="Rs. "
        android:textColor="#676a6c"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_amount_remvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_amount_value"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/tv_Rs.1_ramaining"
        android:text="600,000.00"
        android:textColor="#676a6c"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/consolidate_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_consolidate_remamount"
        android:text="Status: "
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/consolidate_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Rs.1_ramaining"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/consolidate_status"
        android:text="Paid"
        android:textColor="#187bcd"
        android:textStyle="bold"
        android:textSize="14sp" />


</RelativeLayout>