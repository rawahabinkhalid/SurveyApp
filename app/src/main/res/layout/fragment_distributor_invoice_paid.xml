<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/ln_txt_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp">


                <RelativeLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_company"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/company"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_company"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_payment_id"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_company"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/paymentid_sp"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_payment_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_created_date"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_payment_id"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/created_date"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_created_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_due_date"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_created_date"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/due_date_items"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_due_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_status"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_due_date"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/reference"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_amount"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_status"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/amount"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_paid_amount"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_amount"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/paid_amount"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_paid_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_remaining_amount"
                        
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/layout_paid_amount"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/open_sans"
                        android:hint="@string/remaining_amount"
                        android:theme="@style/TextLabel"
                        app:boxStrokeColor="@color/box_stroke">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_remaining_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled="false"
                            android:fontFamily="@font/open_sans"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_authorization_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_txt_parent"
                android:layout_marginTop="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_credit_details_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_authorization_id"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="27dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/ln_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/Txt_Payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/Txt_Payment"
                            android:textSize="15.6sp" />


                        <RelativeLayout
                            android:id="@+id/relative_banking_make_payment"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@+id/Txt_Payment"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/spinner_round">

                            <!--                    <Spinner-->
                            <!--                        android:id="@+id/spinner_companyName"-->
                            <!--                        android:layout_width="match_parent"-->
                            <!--                        android:layout_height="match_parent"-->
                            <!--                        android:background="@null"-->
                            <!--                        android:fontFamily="@font/open_sans"-->
                            <!--                        android:paddingLeft="20dp"-->
                            <!--                        android:paddingTop="5dp"-->
                            <!--                        android:paddingRight="20dp"-->
                            <!--                        android:paddingBottom="5dp"-->
                            <!--                        android:textColor="@color/textcolor"-->
                            <!--                        android:textSize="14sp"-->
                            <!--                        app:boxStrokeColor="@color/box_stroke" />-->
                            <Spinner
                                android:id="@+id/spinner_banking_make_payment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:dropDownWidth="match_parent"
                                android:popupBackground="@drawable/spinner_round" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/spinner_banking_make_payment"
                                android:layout_alignEnd="@+id/spinner_banking_make_payment"
                                android:layout_alignRight="@+id/spinner_banking_make_payment"
                                android:layout_alignBottom="@+id/spinner_banking_make_payment"
                                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                android:theme="@style/Spinner" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/button_back"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/btn_voucher"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_round"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="@string/back"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="@dimen/button_text_size" />

                    <Button
                        android:id="@+id/btn_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/ln_payment"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_round"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="@string/view_voucher"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="@dimen/button_text_size" />


                    <RelativeLayout
                        android:id="@+id/rl_banking"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_round"
                        android:padding="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_account_balance_black_24dp" />

                            <TextView
                                android:id="@+id/tv_banking_channel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/open_sans"
                                android:gravity="left"
                                android:text="@string/banking_channel"
                                android:textColor="@color/textcolor"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_jazz_cash"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_round"
                        android:padding="20dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/jazz_cash" />

                            <TextView
                                android:id="@+id/tv_jazz_cash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:gravity="left"
                                android:text="\t\t\tJazz Cash"
                                android:textColor="@color/textcolor"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_marginBottom="10dp"-->
            <!--                android:text="@string/all_rights_reserved"-->
            <!--                android:gravity="center"-->
            <!--                />-->

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>