<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/edit_text_squared"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/my_network_fragment_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_network_fragment_status"
                android:text="+92"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sent_no_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_network_fragment_status"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/my_network_fragment_no"
                android:text="123456789"
                android:textColor="#676a6c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sent_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_network_fragment_no"
                android:text="Mz-2,Horizon Vista,Plot-10,Block-4,Clifton"
                android:textSize="14sp"
                />
            />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/pop_menu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.75"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textColor="#676a6c"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>