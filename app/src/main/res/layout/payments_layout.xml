<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/main_layout_payment_box_retailer"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/edit_text_squared"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="Ghulam Rabani &amp; Sons Traders &amp; Distributors"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/rv_box_heading_size"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/rv_box_color"
            />

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textColor="#676a6c"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/payment_id"
        android:text="@string/paymentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/payment_id_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/payment_id"
        android:fontFamily="@font/open_sans"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/payment_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:text="51247895354254780369"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/payment_id_colon"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <RelativeLayout
        android:id="@+id/rl_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_id"
        android:visibility="gone"
        >

    <TextView
        android:id="@+id/tv_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/due_date_items"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/due_date_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_due_date"
        android:fontFamily="@font/open_sans"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/due_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-08-2021"
        android:layout_toEndOf="@+id/due_date_colon"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_due_date"
        android:text="@string/amount_items"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/amount_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_due_date"
        android:layout_toEndOf="@+id/tv_amount"
        android:fontFamily="@font/open_sans"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_due_date"
        android:text="Rs. 600,000.00"
        android:layout_toEndOf="@+id/amount_colon"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:text="@string/status_items"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/status_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:layout_toEndOf="@+id/status"
        android:fontFamily="@font/open_sans"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:text="Approved"
        android:layout_toEndOf="@+id/status_colon"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_value"
        android:text="@string/state_item"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />
    <TextView
        android:id="@+id/state_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_value"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/tv_state"
        android:fontFamily="@font/open_sans"
        android:text=": "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/tv_state_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_value"
        android:text="Normal"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/state_colon"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size"
        />

</RelativeLayout>