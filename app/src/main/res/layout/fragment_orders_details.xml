<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Invoice.Select_Tabs.OrdersDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ln_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical"
                    android:weightSum="8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Order ID"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/invoice_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:hint="555551223455"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Distributor Company"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/invoice_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:hint="Kamran Traders"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Transport Mode"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading"/>

                    <TextView
                        android:id="@+id/invoice_tr_mode"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:hint="Self"
                        android:gravity="center_vertical"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Payment Term"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/invoice_payment_term"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:hint="100"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Created Date"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/invoice_Order_cdate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="12/4/2020"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Status"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />
                    <TextView
                        android:id="@+id/invoice_Order_status"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Recieved"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Shipment Address"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/Order_shipaddress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Karachi Pakistan"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:text="Billing Address"
                        android:layout_marginTop="10dp"
                        android:textColor="#187bcd"
                        android:textSize="@dimen/heading" />

                    <TextView
                        android:id="@+id/Order_billingAddress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Karachi Pakistan"
                        android:background="@drawable/distribution_login"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_txt"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_round"
                        android:gravity="center"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/ln_btn">
                    <TextView
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:text="@string/all_rights_reserved" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>