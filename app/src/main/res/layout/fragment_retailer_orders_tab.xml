<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_container"
    android:background="@android:color/white"
    android:clickable="true">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="27dp">


            <LinearLayout
                android:id="@+id/ln_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_login"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_order_company"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/company"
                    android:fontFamily="@font/open_sans"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_company_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:theme="@style/TextLabelEditeText"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_orderID"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/order_id"
                    android:fontFamily="@font/open_sans"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_orderID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                         android:theme="@style/TextLabelEditeText" 
                        />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_created_date_order"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/created_date"
                    android:fontFamily="@font/open_sans"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_created_date_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:theme="@style/TextLabelEditeText" 
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_status_order"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/status"
                    android:fontFamily="@font/open_sans"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_status_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:theme="@style/TextLabelEditeText" 
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_order_reference"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/order_reference_no"
                    android:fontFamily="@font/open_sans"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_order_reference"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:enabled="true"
                        android:focusableInTouchMode="false"
                        android:scrollbars="vertical"
                        android:theme="@style/TextLabelEditeText"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_invoice_reference"
                    
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/invoice_ref_no"
                    android:fontFamily="@font/open_sans"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_invoice_reference"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:enabled="true"
                        android:focusableInTouchMode="false"
                        android:scrollbars="vertical"
                        android:theme="@style/TextLabelEditeText"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_txt_comments"
                    
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:hint="@string/comments"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textMultiLine"
                    android:theme="@style/TextLabel"
                    app:boxBackgroundColor="#fff"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_comments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:inputType="textPassword"
                        android:paddingTop="15dp"
                        android:theme="@style/TextLabelEditeText" 
                        />

                </com.google.android.material.textfield.TextInputLayout>

<!--                <TextView-->
<!--                    android:id="@+id/footer"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_alignParentBottom="true"-->
<!--                    android:layout_marginBottom="10dp"-->
<!--                    android:gravity="center"-->
<!--                    android:text="@string/all_rights_reserved" />-->

                <Button
                    android:id="@+id/button_back"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/retailer_button_size"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_round"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/button_text_size"
                    />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>