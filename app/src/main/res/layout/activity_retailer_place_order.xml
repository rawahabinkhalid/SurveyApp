<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Distributor.ui.retailer.RetailerPlaceOrder.RetailerPlaceOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <com.google.android.material.tabs.TabLayout
            android:layoutDirection="ltr"
            android:id="@+id/tabs_rpoid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            app:tabRippleColor="@color/tab_ripple_color"
            android:layout_marginRight="27dp"
            android:background="@drawable/tab_indicator"
            app:tabContentStart="0dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="#187bcd"
            app:tabMinWidth="0dp"
            android:clipToPadding="false"
            app:tabPaddingStart="5dp"
            app:tabPaddingEnd="5dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#187bcd"
            app:tabTextAppearance="@style/CustomTextAppearanceTab" />

        <com.matzsolutions.surveyapp.NonSwipeableViewPager
            android:id="@+id/view_pager_rpoid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs_rpoid"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>