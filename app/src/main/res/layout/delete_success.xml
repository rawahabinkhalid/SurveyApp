<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#fff"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Deleted"
        android:textColor="#187bcd"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/alert_text_box_success"/>
    <ImageButton
        android:id="@+id/btn_close_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_close_black_24dp"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Support Ticket has been deleted successfully"
        android:padding="15dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:layout_below="@+id/tv_delete"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>