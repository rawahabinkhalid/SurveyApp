<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/ln_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/underline">

        <TextView
            android:id="@+id/tv_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/consolidation_details"
            android:textColor="@color/textcolor"
            android:textSize="17sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_line"
        android:layout_below="@+id/ln_login"
        android:layout_marginTop="25dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_consolidation_details_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_separator_light_grey" />

        <TextView
            android:id="@+id/asd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingLeft="27dp"
            android:paddingTop="9.5dp"
            android:paddingRight="27dp"
            android:text="@string/order_approval_msg"
            android:textColor="@color/error_stroke_color"
            android:textSize="13sp" />


        <Button
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="11.6sp" />

    </RelativeLayout>

</RelativeLayout>
