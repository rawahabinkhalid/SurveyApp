<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="5dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/edit_text_squared">



    <ImageButton
        android:id="@+id/consolidated_view_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="18sp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghulam Rabbani and  Sons"
        android:textSize="18sp"
        android:layout_weight="0.5"
        android:textStyle="bold"
        android:textColor="#676a6c"
    />
    <TextView
        android:id="@+id/invoice_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="30dp"
        android:text="Invoice No:"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/consolidated_view_invoice_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="30dp"
        android:text="1002312324251524"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/invoice_no"
        android:textStyle="bold"
        android:textColor="#676a6c"
        />

    <TextView
        android:id="@+id/consolidate_view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidated_view_invoice_no"
        android:text="Amount:"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/conslidated_view_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidated_view_invoice_no"
        android:text=" 600,000.00"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/consolidated_view_Rs."
        android:textColor="#676a6c"
        />

    <TextView
        android:id="@+id/consolidated_view_Rs."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidated_view_invoice_no"
        android:text="Rs. "
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/consolidate_view_amount"
        android:textColor="#676a6c"
        />

    <TextView
        android:id="@+id/consolidate_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidate_view_amount"
        android:text="Status:"
        android:textSize="14sp"
        android:textColor="#676a6c"
        />

    <TextView
        android:id="@+id/tv_Rs.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consolidated_view_Rs."
        android:text="Paid "
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/consolidate_view_status"
        android:textStyle="bold"
        android:textColor="#676a6c"
        />



</RelativeLayout>