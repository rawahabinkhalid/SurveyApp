<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Registration.Registration_page2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:weightSum="2"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="Welcome To Distributor Portal"
                    android:textColor="#187bcd"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:justificationMode="inter_word"
                    android:textSize="14sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ln_shipping">

                <LinearLayout
                    android:id="@+id/ln_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:text="REGISTER"
                        android:textColor="#187bcd"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="ACCOUNT INFORMATION"
                        android:textColor="#187bcd"
                        android:textSize="10sp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ln_login"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_Address"
                        
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:hint="Address01 *"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/Address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top|left"
                            android:inputType="textMultiLine"
                            android:theme="@style/TextLabelEditeText" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <RelativeLayout
                        android:id="@+id/relative_issuetype"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/layout_Address"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/spinner_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:dropDownWidth="match_parent"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_criticality"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/relative_issuetype"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/spinner_province"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:dropDownWidth="match_parent"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative_Preffered_Contact"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/relative_criticality"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/edit_text_squared">

                        <Spinner
                            android:id="@+id/spinner_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:dropDownWidth="match_parent"/>
                    </RelativeLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_postal_shipping"
                        
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/relative_Preffered_Contact"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:hint="Postal Code *"
                        android:theme="@style/TextLabel"
                        app:boxBackgroundColor="#fff"
                        app:boxStrokeColor="@color/box_stroke"
                        app:boxStrokeWidth="1.75dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/postal_shipping"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:maxLength="5"
                             android:theme="@style/TextLabelEditeText"  />

                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ln_billing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_fields"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:text="REGISTER"
                        android:textColor="#187bcd"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_set"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="BILLING ADDRESS"
                        android:textColor="#187bcd"
                        android:textSize="10sp" />

                    <CheckBox
                        android:id="@+id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:text="SAME AS SHIPPING ADDRESS"
                        android:textColor="#676a6e" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_billing_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_billing">

                    <RelativeLayout
                        android:id="@+id/rl_billing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_Address02"
                            
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:hint="Address02 *"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:theme="@style/TextLabel"
                            app:boxBackgroundColor="#fff"
                            app:boxStrokeColor="@color/box_stroke"
                            app:boxStrokeWidth="1.75dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/Address02"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top|left"
                                android:inputType="textMultiLine"
                                android:theme="@style/TextLabelEditeText" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:id="@+id/select_country"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/layout_Address02"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared">

                            <Spinner
                                android:id="@+id/spinner_country2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:dropDownWidth="match_parent"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_province"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/select_country"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared">

                            <Spinner
                                android:id="@+id/spinner_province2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:dropDownWidth="match_parent"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/select_city"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/select_province"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="40dp"
                            android:background="@drawable/edit_text_squared">

                            <Spinner
                                android:id="@+id/spinner_city2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:dropDownWidth="match_parent"/>
                        </RelativeLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_postal_billing"
                            
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_below="@+id/select_city"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:hint="Postal Code *"
                            android:theme="@style/TextLabel"
                            app:boxBackgroundColor="#fff"
                            app:boxStrokeColor="@color/box_stroke"
                            app:boxStrokeWidth="1.75dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/postal_billing"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:maxLength="5"
                                android:theme="@style/TextLabelEditeText"  />

                        </com.google.android.material.textfield.TextInputLayout>


                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/rl_billing_main"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round"
                    android:gravity="center"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_register"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/all_rights_reserved" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>