<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">#000000</item>

    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/green_color</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="colorAccent">@color/box_stroke</item>
        <item name="colorControlNormal">@color/box_stroke</item>
        <item name="colorControlActivated">@color/box_stroke</item>
        <item name="colorError">#ff0000</item>
        <item name="colorPrimary">@color/box_stroke</item>
        <item name="boxStrokeWidth">1.75dp</item>
        <item name="android:textSize">13.6sp</item>
        <item name="boxStrokeColor">@color/box_stroke</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="TextLabelSearchBox" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#187bcd</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#676a6c</item>
        <!--        <item name="android:textSize">20sp</item>-->
        <item name="colorAccent">#C7C8CA</item>
        <item name="colorControlNormal">#C7C8CA</item>
        <item name="colorControlActivated">#187bcd</item>
        <item name="boxStrokeColor">#187bcd</item>
        <item name="colorPrimary">#187bcd</item>
        <item name="boxStrokeWidth">2.5dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    </style>

    <style name="ErrorTextAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#ffff0000</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#ffff0000</item>
        <!--        <item name="android:textSize">20sp</item>-->
        <item name="colorAccent">#ffff0000</item>
        <item name="colorControlNormal">#ffff0000</item>
        <item name="colorControlActivated">#ffff0000</item>
        <item name="boxStrokeColor">#ffff0000</item>
        <item name="colorPrimary">#ffff0000</item>
        <item name="boxStrokeWidth">2.5dp</item>
    </style>

    <style name="TextLabelEditeText">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textSize">@dimen/edit_text_box_size</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#96BA3C</item>

        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimaryInverse">#000
        </item> <!-- header date, month color && calendar text highlight color -->
        <item name="android:textColorSecondaryInverse">#000</item> <!-- header year color -->

    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">#fff</item> <!-- header background color -->
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#187bcd</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <!--        <item name="paddingEnd">0dp</item>-->
        <!--        <item name="paddingStart">0dp</item>-->
        <!--        <item name="android:paddingLeft">0dp</item>-->
