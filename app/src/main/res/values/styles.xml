        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_My" parent="Theme.AppCompat.Light">
        <!-- set the height of Action Bar . -->
        <item name="actionBarSize">42dip</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance44">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textSize">13.6sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6d6e72</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="DrawerItemText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#4A4D51</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="theme_loader" parent="NoActionBar">
        <item name="android:windowFullscreen">true</item>

    </style>
